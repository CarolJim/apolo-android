<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutSms"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.smsverification.SmsActivity"
    android:background="@color/bg_app">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/dimen_margin_large"
    android:layout_marginRight="@dimen/dimen_margin_large">

         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

         <com.pagatodo.apolo.utils.customviews.MaterialTextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/codigo_sms"
             android:textColor="@color/colorWhite"
             app:tipo="Titulo"
             android:gravity="center"
             android:lineSpacingExtra="0sp"
             android:textSize="@dimen/dimen_margin_xl"
             android:layout_marginTop="@dimen/dimen_margin_large"
             android:layout_marginLeft="@dimen/dimen_margin_large"
             android:layout_marginRight="@dimen/dimen_margin_large" />

             <!-- CÃ³digo SMS -->
            <include layout="@layout/pin_edittext" />

        </LinearLayout>

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Boton verificar SMS  -->
            <com.pagatodo.apolo.utils.customviews.MaterialButton
                android:id="@+id/btnValidar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_button_height"
                android:layout_marginBottom="@dimen/dimen_margin_xl"
                android:text="@string/txt_button_reenviar"
                android:textColor="@color/colorWhite"
                app:buttonNormalColor="@color/teal"
                app:buttonStrokeColor="@color/teal"
                app:cornerRadius="@dimen/dimen_button_radius"
                android:layout_alignParentBottom="true"
                app:intercepterOnclick="true"/>

        </RelativeLayout>

</RelativeLayout>
<include layout="@layout/progress_view_activity" />
</android.support.design.widget.CoordinatorLayout>
